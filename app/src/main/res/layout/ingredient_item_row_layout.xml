<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="4dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/ingredient_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:layout_centerVertical="true"
        android:textColor="@color/brown700"
        android:textSize="16sp"
        tools:text="@tools:sample/full_names"/>

    <TextView
        android:id="@+id/points_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_toEndOf="@id/ingredient_row"
        android:layout_toLeftOf="@id/quantity_row"
        android:layout_toRightOf="@id/ingredient_row"
        android:layout_toStartOf="@id/quantity_row"
        android:background="@drawable/points_line"
        android:layerType="software"/>

    <TextView
        android:id="@+id/quantity_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textColor="@color/brown700"
        android:textSize="16sp"
        tools:text="@tools:sample/us_zipcodes"/>

</RelativeLayout>