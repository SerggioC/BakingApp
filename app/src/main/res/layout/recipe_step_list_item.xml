<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:background="@drawable/step_background"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/step_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="4dp"
        android:contentDescription="@string/step_image_desc"
        tools:srcCompat="@drawable/ic_chef"/>

    <TextView
        android:id="@+id/step_resume"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:drawableEnd="@android:drawable/ic_menu_slideshow"
        android:drawableRight="@android:drawable/ic_menu_slideshow"
        android:gravity="center"
        android:maxLines="1"
        android:textSize="20sp"
        tools:text="Step resume"/>

</LinearLayout>